doctype html
html
  head
    title LogRocket Pug Example
    link(rel='stylesheet' href='https://getbootstrap.com/docs/4.4/dist/css/bootstrap.min.css')
    style.
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
      }

      p#content {
        text-align: center;
        font-family: arial;
        color: #000000;
        font-size: 40px;
      }

      footer {
        padding-top: 3rem;
        padding-bottom: 3rem;
      }

      footer p {
        margin-bottom: .25rem;
        text-align: center;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }

      .h1 {
        font-family: arial;
        color: #000000;
        font-size: 40px;
        text-align: left;
      }



  body

      block content

      include footer.pug
    
      script(src='https://code.jquery.com/jquery-3.4.1.slim.min.js')
      script(src='https://getbootstrap.com/docs/4.4/dist/js/bootstrap.bundle.min.js')